{
  "name": "afk-timer",
  "productName": "AFK Timer",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . AFK-Timer --overwrite --asar=true --platform=win32 --arch=ia32 --icon=icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"AFK Timer\"",
    "create-installer-mac": "electron-installer-dmg ./release-builds/AFK-Timer/AFK-Timer.app AFK-Timer --out=release-builds --overwrite --icon=icons/mac/icon.icns",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "Electron"
  ],
  "author": "Drew Bloomfield",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^2.0.8",
    "electron-packager": "^12.1.1",
    "electron-builder": "^20.28.3"
  },
  "dependencies": {
    "dotenv": "^6.0.0",
    "moment": "^2.22.2"
  },
  "build": {
    "appId": "AFKTimer",
    "mac": {
      "category": "timing"
    }
  }
}
